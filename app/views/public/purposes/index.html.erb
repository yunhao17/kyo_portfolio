<h1 class="text-center">目的一覧</h1>
<div class="album">
  <div class="container">
    <div class="row">
      <% @purposes.each do |purpose| %>
      <div class="col" id="purpose">
        <div class="card">
          <div class="card-imag-top text-center">
            <%= attachment_image_tag purpose, :image, fallback: "no_image.jpg", size: '200x150' %>
          </div>
          <div class="card-body">
            <p class="text-center" id="font">
              <%= link_to mokuteki_path(purpose.id) ,style:"color: #00a1e9;" do %>
              <%= purpose.name %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>