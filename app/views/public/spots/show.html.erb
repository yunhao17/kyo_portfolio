<h2>スポット詳細</h2>
<%= @spot.name %>
<%= @spot.description %>
<% if @spot.favorited_by?(current_user) %>
  <p>
    <%= link_to spot_favorites_path(@spot), method: :delete do %>
    ♥<%= @spot.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to spot_favorites_path(@spot), method: :post do %>
    ♡<%= @spot.favorites.count %>
<% end %>
  </p>
<% end %>
<h2>コメント一覧</h2>
<p>コメント件数：<%= @spot.spot_comments.count %></p>
<% @spot_comments.each do |spot_comment| %>
  <%= spot_comment.user.age %>
  <%= spot_comment.user.name %>
  <%= spot_comment.created_at.strftime('%Y/%m/%d') %>
  <%= spot_comment.comment %>
  <% if spot_comment.user == current_user %>
  <div>
    <%= link_to "削除", spot_spot_comment_path(spot_comment.spot, spot_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
<%= paginate @spot_comments %>
<div class="new-comment">
<%= form_with(model:[@spot, @spot_comment], local: true) do |f| %>
  <%= f.text_area :comment, placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>