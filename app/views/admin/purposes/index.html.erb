<h1>目的一覧</h1>
<%= form_with model: @purpose,url: admin_purposes_path(@purpose), local:true do |f| %>
<div>
  <%= f.label :name, "目的名" %>
  <%= f.text_field :name %>
  <%= f.submit "追加" %>
</div>
<% end %>
<table>
  <thead>
    <tr>
      <th>目的名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @purposes.each do |purpose| %>
    <tr>
      <th><%= purpose.name %></th>
      <th><%= link_to "削除",admin_purpose_path(purpose.id), method: :delete %></th>
    </tr>
    <% end %>
  </tbody>
</table>