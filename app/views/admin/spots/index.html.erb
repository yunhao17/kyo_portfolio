<h1>エリア一覧</h1>
<h2><%= link_to "追加",new_admin_spot_path %></th></h2>
<table>
  <thead>
    <tr>
      <th>エリア名</th>
      <th>目的</th>
      <th>スポット画像</th>
      <th>スポット名</th>
      <th>スポット説明</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @spots.each do |spot| %>
    <tr>
      <th><%= spot.area.name %></th>
      <th><%= spot.purpose.name %></th>
      <th><%= attachment_image_tag spot, :image, :fill, 50, 50, fallback: "no_image.jpg" %></th>
      <th><%= spot.name %></th>
      <th><%= spot.description %></th>
      <th><%= link_to "編集",edit_admin_spot_path(spot.id) %></th>
      <th><%= link_to "削除",admin_spot_path(spot.id), method: :delete %></th>
    </tr>
    <% end %>
  </tbody>
</table>